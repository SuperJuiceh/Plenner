<UserControl x:ConnectionId='1'
    x:Class="Planner.Modules.NavigationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:Planner.Data.Converters"
    xmlns:local="using:Planner.Modules"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="50">
    <UserControl.Resources>
        <conv:BoolToElementVisibility x:Key="boolToVisibilityConverter"/>

    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Width="{Binding ElementName=mainSplitView, Path=Width}" Margin="0,0,0,30">
        <Button x:ConnectionId='2' x:Name="splitViewOpenCloseButton" Content="&#xE700;"                                        Width="30" Height="30" />
        <!--<Button x:Name="appointmentsButton" Width="50" Height="50" Click="appointmentsButton_Click">
                    <Button.Background>f
                        <ImageBrush ImageSource="/Assets/appointment_new2.png"/>
                    </Button.Background>
                </Button>-->
        <Button x:ConnectionId='3' x:Name="activitiesButton" Width="50" Height="50"                                                        Visibility="{Binding ActivitiesButtonEnabled, Converter={StaticResource boolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/appointment_new2.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='4' x:Name="todoitemsButton" Width="50" Height="50"                                                       Visibility="{Binding ToDoButtonEnabled, Converter={StaticResource boolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/ToDo_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='5' x:Name="reflectionsButton" Width="50" Height="50"                                                         Visibility="{Binding ReflectionsButtonEnabled, Converter={StaticResource boolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/journal.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='6' x:Name="settingsButton" Width="50" Height="50"                                                      Visibility="{Binding SettingsButtonEnabled, Converter={StaticResource boolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/settings_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='7' HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                                                Height="42" Visibility="{Binding TimeFlowButtonEnabled, Converter={StaticResource boolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Planning_Icon.png"/>
            </Button.Background>
        </Button>
    </StackPanel>
</UserControl>

