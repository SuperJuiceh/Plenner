            <RelativePanel Height="350" Width="400" Margin="-21,-27,21,27">
                <maps:MapControl x:Name="mainMap" ElementSoundMode="default" HorizontalAlignment="left" MapTapped="MapControl_MapTapped" Loaded="MapControl_Loaded" VerticalAlignment="top" MapElementClick="MapControl_MapElementClick" MapServiceToken="UWDI1l1XbwkriqZEGETA~MAYOBVQMdUrmOkYYK_sS1g~AoV9cm2Qr83ZnEaIlrcNUwYRTxmA-84sWvikuDFviTbzlIQfBeEto177CiI5jBqc" Height="255" Width="309" Margin="0,0,-9,0" />
